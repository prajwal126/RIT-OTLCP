<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actionbar_background"
    tools:context="com.example.prajw.ritcourse.Profile"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="24dp"
            android:text="Sex"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView25"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="Age"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/textView20"
            app:layout_constraintTop_toBottomOf="@+id/textView20"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginBottom="41dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="38dp"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView25"
            app:layout_constraintLeft_toLeftOf="@+id/textView22"
            app:layout_constraintRight_toRightOf="@+id/Birthday"
            app:layout_constraintTop_toTopOf="@+id/textView22"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="192dp"
            android:layout_height="25dp"
            android:layout_marginBottom="72dp"
            android:layout_marginTop="71dp"
            android:text="REGISTERED COURSES"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/button3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Birthday"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="Email"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/textView18"
            app:layout_constraintTop_toBottomOf="@+id/textView18"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="125dp"
            android:layout_height="124dp"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/textView22"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="338dp"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:text="Name"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="194dp"
            android:layout_height="26dp"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="39dp"
            android:layout_marginRight="39dp"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView20"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintRight_creator="1" />

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/Birthday"
            app:layout_constraintTop_toBottomOf="@+id/Birthday"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1">

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="81dp"
                android:layout_height="27dp"
                android:layout_weight="1"
                android:text="Male"
                tools:layout_editor_absoluteX="152dp"
                tools:layout_editor_absoluteY="335dp" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="81dp"
                android:layout_height="27dp"
                android:layout_weight="1"
                android:text="Female"
                tools:layout_editor_absoluteX="264dp"
                tools:layout_editor_absoluteY="335dp" />
        </RadioGroup>

        <EditText
            android:id="@+id/Birthday"
            android:layout_width="207dp"
            android:layout_height="0dp"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="14dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="@string/birthday"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView23"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <info.hoang8f.widget.FButton
            android:id="@+id/button3"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="173dp"
            android:onClick="setvalue"
            android:text="SUBMIT"
            android:textColor="@color/cardview_light_background"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Birthday"
            fbutton:buttonColor="@color/fbutton_color_midnight_blue"
            fbutton:cornerRadius="5dp"
            fbutton:shadowColor="@color/fbutton_color_midnight_blue"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="238dp"
            android:layout_height="115dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/border"
            android:nestedScrollingEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@+id/textView21"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintRight_creator="1" />
    </android.support.constraint.ConstraintLayout>


</ScrollView>
